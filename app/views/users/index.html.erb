<h1 class="text-white">CRUD</h1>

<% @users.each do |user| %>
  <article>
    <header>
      <h2 class="text-white">
        <%= link_to user.name, user, class: "text-white" %>
      </h2>
    </header>
    <p>
    <div class="text-white">
      <label>Idade:</label>
      <%= user.age %>
        </p>
        <p>
          <label>CPF:</label>
          <%= user.cpf %>
        </p>
        <p>
          <label>ID do Usuário:</label>
          <%= user[:id]%>
        </p>
        <p>
          <label>Gênero ID</label>
          <%= user.genero.tipo %>
    </div>
    </p>
    </header>
  </article>
  <%end%>

    <%= link_to 'Novo Cadastro' , new_user_path, class:"btn btn-danger" %>